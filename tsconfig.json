{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noLib": false,
        "isolatedModules": false,
        "diagnostics": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "version": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./lib/npm/angular2@2.0.0-alpha.45/bundles/typings/**/*/*.d.ts",
        "./typings/**",
        "!./npm_modules/**"
    ],
    "files": [
        "./src/main.ts"
    ]
}
